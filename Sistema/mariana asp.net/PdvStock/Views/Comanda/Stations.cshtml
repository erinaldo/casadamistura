@model PdvStock.Models.Comanda
<style>
    .large{
        height: 50%;
        font-size: 74px;
    }
</style>
@{
    ViewBag.Title = "Cadastrar Comanda";
    Layout = "~/Views/Shared/_LayoutComanda.cshtml";
}

@using (Html.BeginForm("Stations","Comanda",null,FormMethod.Post, htmlAttributes: new{id="Form-Station"})) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoBarrasComanda, new { htmlAttributes = new { @placeholder = "COMANDA", @class = "form-control large" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.UsuarioId, new { htmlAttributes = new { @placeholder = "SEU CODIGO", @class = "form-control large" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProdutosId, new { htmlAttributes = new { @placeholder = "PRODUTO", @class = "form-control large" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @placeholder = "QUANTIDADE", @Value = "1", @class = "form-control large" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i>&ensp;
                    @Resources.Resource.Cadastrar
                </button>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $("#CodigoBarrasComanda").focus();
    $('#Form-Station')[0].reset();
    $(document).keyup(function (e) {
        console.log(e.keyCode);
        if (e.keyCode == 13) {
            $("#Form-Station").submit();
        }
    });
</script>